@import "normalize"
@import "antiscroll"
@import "nib/gradients"
@import "reset"
@import "shim"
@import "colors"
@import "buttons"
@import "forms"
@import "authentication"
@import "channels"
@import "stream"
@import "edit"
@import "mobile"

textarea
    color black
    background-color white

@font-face
  font-family Nunito
  font-style noral
  font-weight 400
  src local(Nunito-Regular), url(../fonts/Nunito-Regular.ttf) format(truetype), url(../fonts/Nunito.woff) format(woff)

html
  height 100%
  overflow-y hidden
  overflow-x auto
  font 13px/17px "Helvetica Neue", Helvetica, Arial, sans-serif
  //background black url(../../public/images/smooth-aura.jpg) fixed
  //linear-bg-gradient #024, #909, #035
  //linear-bg-gradient #035, #065 //blau
  background linear-gradient(top, darkBackground, lightBackground)
  background-attachment fixed
  //-webkit-font-smoothing antialiased

body
  width 100%
  height 100%
  overflow-y hidden
  overflow-x auto
  radial-bg-gradient cover, rgba(255,255,255,.34), rgba(255,255,255,0)
  background-attachment fixed
  -webkit-text-size-adjust none
  &.start
    box none none none
    display block
  &.center
    box horizontal center center

.headbar
  top 0
  width 100%
  height 8px
  background url(../../public/images/headbar.png)
  position absolute
  display none
  &:after
    top 8px
    height 8px
    width 100%
    content ""
    position absolute
    background #f2f2f2
    box-shadow 0 -1px rgba(0,0,0,.03), 0 -2px rgba(0,0,0,.03), 0 -3px rgba(0,0,0,.03), 0 -1px white inset

h1
  font-size 34px
  font-family "Nunito", sans-serif
h2
  font-size 26px
  font-family "Nunito", sans-serif
h3
  font-size 18px
  font-family "Nunito", sans-serif

h4
  width 100%
  font-size 14px
  font-weight bold
  color rgba(0,0,0,.89)
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

h5
  margin-bottom 5px
  font-size 12px
  font-weight bold

ul
  list-style-type none

a, a:visited
  color default_highlight
  text-decoration none
  &:hover
    color light_highligh
    text-decoration underline
  &.internal
    padding-left 12px
    background url(../../public/icons/beagle.png) no-repeat left 4px

.loading
  font-size 27px
  color white
  text-align center
  text-shadow 0 0 1px rgba(0, 0, 0, 0.89), 0 1px 5px rgba(0, 0, 0, 0.55)

.spinner
  width 16px
  height 16px
  margin 17px 8px 0 0
  vertical-align top
  background url(../../public/spinner.gif) no-repeat
  display inline-block

