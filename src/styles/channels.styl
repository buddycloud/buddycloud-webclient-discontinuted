.sidebar
  top 0
  left 0
  bottom 0
  width 234px
  color white
  border-right 0 1px black
  position absolute
  transition 400ms
  
#channels
  top 153px
  right 0
  bottom 0
  left 0
  position absolute
  overflow-y auto

.sidebar
  nav
    box-shadow 0 1px black, 0 2px rgba(255, 255, 255, 0.21)
    position relative
    z-index 4
    overflow hidden
  button
    width 100%
    height 42px
    color white
    font-weight bold
    text-shadow 0 1px rgba(0,0,0,0.21)
    background lighten(desaturate(darkBackground, 70%), 30%)
    border none
    border-right 1px solid black
    border-radius 0
    box-shadow 1px 0 rgba(255,255,255,.21) inset, 0 1px rgba(255,255,255,.21) inset
    float left
    transition none
    box-sizing border-box
    &:hover
      text-shadow 0 1px rgba(0,0,0,0.21)
    &:first-child
      box-shadow 0 1px rgba(255,255,255,.21) inset
    &.active, &:active
      top 0
      background lighten(desaturate(darkBackground, 70%), 10%)
      line-height 47px
      box-shadow none
    span
      padding-left 41px
      position relative
      &:before
        left 0
        top -9px
        height 34px
        width 31px
        content ""
        display block
        position absolute
    &.discover
      span:before
        background url(../../public/icons/globe.png)
    &#create_topic_channel
      span:before
        background url(../../public/icons/new.png)
    &#create_topic_channel
      left 0
      right 0
      bottom 0
      position absolute
      background black
      z-index 9
      box-shadow 1px 0 rgba(255,255,255,.21) inset, 0 1px rgba(255,255,255,.21) inset, 0 -1px rgba(0,0,0,0.55), 0 -2px rgba(0,0,0,0.21), 0 -3px rgba(0,0,0,0.13)
      &:active
        top auto
        line-height 45px
        position absolute
        box-shadow 0 -1px rgba(0,0,0,0.55), 0 -2px rgba(0,0,0,0.08), 0 -3px rgba(0,0,0,0.03)
  .search
    padding 6px 5px 5px
    background lighten(desaturate(darkBackground, 70%), 30%)
    box-shadow -1px 0 black inset, 0 1px rgba(0,0,0,0.55),0 2px rgba(0,0,0,0.21), 0 3px rgba(0,0,0,0.13)
    position relative
    z-index 3
    input[type=search]
      width 100%
      box-shadow 0 1px rgba(255, 255, 255, 0.34), 0 0 0 1px black inset, 0 2px rgba(0, 0, 0, 0.13) inset
    + .channel
      padding-top 6px
.personal.channel,
.personal.channel.selected
  padding-top 21px
  padding-bottom 21px
  background linear-gradient(top, lighten(desaturate(darkBackground, 75%), 40%), lighten(desaturate(darkBackground, 70%), 30%))
  border-bottom 1px solid black
  box-shadow -1px 0 black inset
  position relative
  z-index 5
  .avatar
    top 13px
  nav
    width 200px
    border 1px solid black
    border-radius 5px
    box-shadow 0 1px 8px black
    position absolute
    display none
    button
      background white
      border-bottom 1px solid black
      &:last-child
        border-bottom none
        border-radius 0 0 5px 5px
      &:only-child
        border-radius 5px
      &:first-child
        border-radius 5px 5px 0 0
.channel
  height 34px
  padding 16px 13px 16px 76px
  position relative
  transform-origin top
  transition opacity 200ms
  &.hidden
    opacity 0.34
  &.selected
    background linear-gradient(top, rgba(0,0,0,0.13), rgba(128,128,128,0), rgba(255,255,255,0.13))
    box-shadow 0 1px rgba(0,0,0,.55), 0 2px rgba(255, 255, 255, 0.21), 0 1px rgba(0,0,0,.55) inset, 0 -1px rgba(255, 255, 255, 0.21)
  &.bubbleUp
    position absolute
    z-index 2
  .info
    font-size 12px
    line-height 17px
    text-shadow 0 0 1px rgba(0, 0, 0, 0.13)
    border-radius 5px
    cursor pointer
    .owner, .status
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      display block
    .owner
      font-weight bold
      color white
    .status
      color rgba(255,255,255,.65)
      display block
    .domain
      width auto
  .avatar
    height 50px
    width 50px
    top 8px
    left 13px
    border-radius 3px
    position absolute
    transition 500ms
    cursor pointer
    z-index 1
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.55), 0 1px 1px rgba(0, 0, 0, 0.55), 0 0 0 1px rgba(255, 255, 255, 0.55) inset
.tutorial
  height 123px
  padding 12px 12px 12px 7px
  background linear-gradient(top, rgba(255, 255, 255, 0.34), rgba(255, 255, 255, 0.21))
  .arrow
    padding-left 7px
    font-size 42px
    color admin_highlight
    text-shadow black 0 0 2px
  .info
    cursor auto
    top 0
    margin-top 0
    text-shadow black 0 0 1px
.selected .avatar
  box-shadow 0 0 0 1px rgba(0, 0, 0, 0.55), 0 0 0 1px rgba(255, 255, 255, 0.55) inset, 0 0 0 3px default_highlight, 0 0 0 4px lighten(default_highlight, 8%), 0 0 2px 4px rgba(0, 0, 0, 0.34)

.counter
  top -5px
  right -5px
  height 18px
  padding 0 5px
  color white
  font-size 14px
  line-height 17px
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.34)
  background linear-gradient(top, rgba(255, 255, 255, 0.34), rgba(255, 255, 255, 0.01))
  border-radius 10px
  box-shadow 0 1px rgba(255, 255, 255, 0.55) inset, 0 1px 2px black
  position absolute
  box-sizing border-box
  &.channelpost
    top auto
    bottom -5px
    background-color default_highlight
    box-shadow 0 0 0 1px darken(default_highlight, 15%), 0 1px rgba(255, 255, 255, 0.55) inset, 0 1px 2px black
  &.message
    background-color personal_color
    box-shadow 0 0 0 1px darken(personal_color, 15%), 0 1px rgba(255, 255, 255, 0.55) inset, 0 1px 2px black
  &.admin
    background-color admin_highlight
    box-shadow 0 0 0 1px darken(admin_highlight, 15%), 0 1px rgba(255, 255, 255, 0.55) inset, 0 1px 2px black
